<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.activity.LandingActivity">
    <RelativeLayout
            android:id="@+id/container_landing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/whiteColor"
            android:layout_above="@id/navigation">
    </RelativeLayout>

    <android.support.design.widget.BottomNavigationView
            android:id="@+id/navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white_color_one"
            app:layout_anchorGravity="bottom"
            app:layout_constraintBottom_toBottomOf="@id/container_landing"
            app:layout_anchor="@id/container_landing"
            app:itemIconTint="@color/nav_item_state_list"
            app:itemTextColor="@color/nav_item_state_list"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/navigation"/>

</android.support.constraint.ConstraintLayout>